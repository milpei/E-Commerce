@model List<ProductVM>;

<div class="row justify-content-between mt-4">
    <div class="col-4">
        <h4>Products</h4>
    </div>
    <div class="col-4 text-end">
        <a href="/Product/AddEdit" class="btn btn-success">Create new</a>
    </div>
</div>
<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Stock</th>
            <th style="width:120px">Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Category.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td style="width:120px">
                    <a href="/Product/AddEdit/@item.ProductId" class="btn btn-sm btn-primary"><i class="fa-solid fa-pen"></i></a>
                    <button class="btn btn-sm btn-danger" onclick="deleteItem(@item.ProductId)"><i class="fa-solid fa-trash"></i></button>
                </td>
            </tr>
        }

    </tbody>
</table>

@section Scripts {
    <script>
        function deleteItem(id){

         Swal.fire({
          title: "Are you sure?",
          //text: "You won't be able to revert this!",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#3085d6",
          cancelButtonColor: "#d33",
          confirmButtonText: "Yes, delete it!",
          cancelButtonText: "No, back"
        }).then((result) => {
          if (result.isConfirmed)
          {
               window.location.href ="@Url.Action("Delete", "Product")" + '?id=' + id;
          }
        });

        }
    </script>
}

